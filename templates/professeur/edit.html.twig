{# templates/professeur/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier le Professeur{% endblock %}

{% block body %}
<div class="container">
    <h1>Modifier le Professeur</h1>

    <p>Vous modifiez : {{ professeur.nom }} ({{ professeur.email }})</p>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}
</div>
{% endblock %}
